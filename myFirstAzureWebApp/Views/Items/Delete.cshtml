@model myFirstAzureWebApp.Models.Item

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar</h2>

<h3 style="color:white; font-size:45px;">¿Está seguro de eliminar este registro?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Tipo) : @Html.DisplayFor(model => model.Tipo)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Estado) : @Html.DisplayFor(model => model.Estado)
        </dt>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ItemID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> | |
        <a asp-action="Index" class="btn btn-primary">Atrás</a>
    </form>
</div>
