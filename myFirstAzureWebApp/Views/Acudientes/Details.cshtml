@model myFirstAzureWebApp.Models.Acudiente

@{
    ViewData["Title"] = "Detalles";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Detalles del Acudiente</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Apellido) : @Html.DisplayFor(model => model.Apellido)
        </dt>
      
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Documento) : @Html.DisplayFor(model => model.Documento)
        </dt>
       
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Email) : @Html.DisplayFor(model => model.Email)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model => model.Telefono)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Estado) : @Html.DisplayFor(model => model.Estado)
        </dt>
        
    </dl>
</div>
<div class="form-group" style="margin-left:34%;">
    <a asp-action="Edit" asp-route-id="@Model.AcudienteID" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-danger">Atrás</a>
</div>
