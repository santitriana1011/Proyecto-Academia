<div class="site-blocks-cover overlay" style="background-image: url(images/hero_bg_3.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
    <div class="container">
        <div class="row align-items-center justify-content-start">
            <div class="col-md-6 text-center text-md-left" data-aos="fade-up" data-aos-delay="400">
                <h1 class="bg-text-line">Noticias</h1>
                <p class="mt-4">En esta seccion encontraras las noticias de nuestra Academia y de todos los que trabajamos en ella.</p>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary mt-5" style="width:320px; margin-left:35%;">Crear Noticia</a>
</p>
<div class="row mb-5">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="post-entry">
                <div class="image">
                    <img src="~/images/img_1.jpg" alt="Image" class="img-fluid">
                </div>
                <div class="text p-4">
                    <h2 class="h5 text-black"><a href="#">@Html.DisplayFor(modelItem => item.Nombre)</a></h2>
                    <span class="text-uppercase date d-block mb-3"><small>@Html.DisplayFor(modelItem => item.Fecha)</small></span>
                    <p class="mb-0">@Html.DisplayFor(modelItem => item.Descripcion)</p>
                </div>
                <div style="margin-left:35%;">
                    <a asp-action="Edit" asp-route-id="@item.ActualidadID" class="btn btn-outline-warning icon-pencil"></a> |
                    <a asp-action="Delete" asp-route-id="@item.ActualidadID" class="btn btn-outline-danger icon-delete"></a>
                </div>
            </div>
        </div>
    }
</div>