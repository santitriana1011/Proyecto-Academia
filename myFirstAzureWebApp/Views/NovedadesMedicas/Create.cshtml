@model myFirstAzureWebApp.Models.NovedadMedica

@{
    ViewData["Title"] = "Crear";
}

@*<h2>Crear</h2>

<h4>Novedad Medica</h4>*@
<hr />
<div class="row" style="margin-left:30%;">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EstudianteID" class="control-label">Seleccionar Estudiante</label>
                <select asp-for="EstudianteID" class ="form-control" asp-items="ViewBag.EstudianteID"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmpleadoID" class="control-label">Seleccionar Empleado que atiende</label>
                <select asp-for="EmpleadoID" class ="form-control" asp-items="ViewBag.EmpleadoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaLesion" class="control-label"></label>
                <input asp-for="FechaLesion" class="form-control" />
                <span asp-validation-for="FechaLesion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-danger">Atrás</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
