@model IEnumerable<myFirstAzureWebApp.Models.Nomina>

@{
    ViewData["Title"] = "Nomina";
}

    <h2 class="mt-2" style="color:white; font-size:55px;">Nominas</h2>

<p>
    <a asp-action="Create"><button class="btn btn-primary mt-5" style="width:320px; margin-left:35%;">Nueva Nomina</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color:white;">
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th style="color:white;">
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th style="color:white;">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th style="color:white;">
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th style="color:white;">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="color:white;">
                @Html.DisplayFor(modelItem => item.Empleado.Nombre)
            </td>
            <td style="color:white;">
                @Html.DisplayFor(modelItem => item.Item.Nombre)
            </td>
            <td style="color:white;">
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td style="color:white;">
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td style="color:white;">
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NominaID" class="btn btn-outline-success">Editar</a>
                <a asp-action="Details" asp-route-id="@item.NominaID" class="btn btn-outline-warning">Detalles</a>|
                <a asp-action="Delete" asp-route-id="@item.NominaID" class="btn btn-outline-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
