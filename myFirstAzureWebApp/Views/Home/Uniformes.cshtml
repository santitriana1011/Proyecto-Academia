@{
    ViewData["Title"] = "Uniformes";
}
    <h2 style="color:white;">Uniformes</h2>
    <style>
        #carouselId {
            margin-left: 1.8%;
            margin-right: 1.8%;
        }

        .card {
            margin-top: 50px;
            text-align: center;
        }
    </style>

    <div class="row">
        <div class="col">
            <div id="carouselId" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselId" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselId" data-slide-to="1"></li>
                    <li data-target="#carouselId" data-slide-to="2"></li>
                    <li data-target="#carouselId" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="img-fluid" src="~/images/SliderUniforme.jpg" alt="First slide" width="1300" height="420">
                    </div>
                    <div class="carousel-item">
                        <img class="img-fluid" src="~/images/SliderUniforme2.jpg" alt="Second slide" width="1300" height="420">
                    </div>
                    <div class="carousel-item">
                        <img class="img-fluid" src="~/images/SliderUniforme3.jpg" alt="Third slide" width="1300" height="420">
                    </div>
                    <div class="carousel-item">
                        <img class="img-fluid" src="~/images/SliderUniforme4.jpg" alt="Fourth slide" width="1300" height="420">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselId" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselId" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="container">

        <div class="row">
            <div class="col-12 col-lg-4 col-md-6">
                <div class="card">
                    <img class="card-img-top" src="~/images/UniformeEntrenamiento.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h4 class="card-title">Uniforme Training</h4>
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">
                            Ver Mas
                        </button>

                        <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Informacion</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Los uniformes son 100% Poliester se deben mandar hacer una semana antes de comenzar los entrenamientos, <br>
                                        Son los mismos para todas las categorias,<br>
                                        Se puede adquirir en: Calle 68 N68b-21 Bogota,Colombia.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4 col-md-6">
                <div class="card">
                    <img class="card-img-top" src="~/images/UniformVisit.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h4 class="card-title">Uniforme Visitante</h4>
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">
                            Ver Mas
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-4 col-md-6">
                <div class="card">
                    <img class="card-img-top" src="~/images/UniformLocal.jpg" alt="" height="300px">
                    <div class="card-body">
                        <h4 class="card-title">Uniforme Local</h4>
                        <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">
                            Ver Mas
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>


