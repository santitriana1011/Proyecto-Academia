@model myFirstAzureWebApp.Models.Escuela

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar</h2>

<h3 style="color:white; font-size:45px;">¿Está seguro de eliminar esta escuela?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Direccion) : @Html.DisplayFor(model => model.Direccion)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(model => model.Telefono)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Estado) :  @Html.DisplayFor(model => model.Estado)
        </dt>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EscuelaID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Atrás</a>
    </form>
</div>
