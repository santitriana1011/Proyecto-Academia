@model myFirstAzureWebApp.Models.Cargo

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar Cargo Empresarial</h2>

<h3 style="color:white; font-size:35px;">¿Está seguro de eliminar este cargo?</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
        </dt>
       
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Estado) : @Html.DisplayFor(model => model.Estado)
        </dt>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CargoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Atrás</a>
    </form>
</div>
