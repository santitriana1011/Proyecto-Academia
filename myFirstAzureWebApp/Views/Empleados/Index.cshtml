@model IEnumerable<myFirstAzureWebApp.Models.Empleado>

@{
    ViewData["Title"] = "Empleado";
}

                    @*<a asp-action="Edit" asp-route-id="@item.EmpleadoID" class="btn btn-outline-success">Editar</a> ||
                    <a asp-action="Details" asp-route-id="@item.EmpleadoID" class="btn btn-outline-warning">Detalles</a>||
                    <a asp-action="Delete" asp-route-id="@item.EmpleadoID" class="btn btn-outline-danger">Eliminar</a>*@

<section>
    @foreach (var item in Model)
    {
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="~/images/Director.jpg" class="card-img" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Nombre)  @Html.DisplayFor(modelItem => item.Apellido)</h5>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Cargo) : @Html.DisplayFor(modelItem => item.Cargo.Nombre) </p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Documento) :  @Html.DisplayFor(modelItem => item.Documento)</small></p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Telefono) : @Html.DisplayFor(modelItem => item.Telefono)</small></p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Direccion) :  @Html.DisplayFor(modelItem => item.Direccion)</small></p>
                        @*<p class="card-text"><small class="text-muted">  @Html.DisplayFor(modelItem => item.Rol)</small></p>*@
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Estado) :  @Html.DisplayFor(modelItem => item.Estado)</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
