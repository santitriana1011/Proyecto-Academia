@model IEnumerable<myFirstAzureWebApp.Models.Empleado>

@{
    ViewData["Title"] = "Empleado";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
<h2 class="mt-2 ml-2" font-size:45px;">Nuestros Empleados</h2>

