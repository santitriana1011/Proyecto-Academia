    <a asp-action="Create"><button class="btn btn-primary mt-5" style="width:320px; margin-left:35%;">Añadir un Nuevo Empleado</button></a>
</p>
<section>
    @foreach (var item in Model)
    {
        <div class="card mb-5" style="max-width: 580px; display:inline-block; margin-right:12px; margin-left:24px; margin-top:9px;">
            <div class="row no-gutters row-lg-6">
                <div class="col-md-4">
                    <img src="~/images/Director.jpg" class="card-img" alt="...">
                </div>
                <div class="col-md-8 col-lg-6">
                    <div class="card-body">
                        <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Nombre)  @Html.DisplayFor(modelItem => item.Apellido)</h5>
                        <p class="card-text">@Html.DisplayNameFor(model => model.Cargo) : @Html.DisplayFor(modelItem => item.Cargo.Nombre) </p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Documento) :  @Html.DisplayFor(modelItem => item.Documento)</small></p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Telefono) : @Html.DisplayFor(modelItem => item.Telefono)</small></p>
                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Direccion) :  @Html.DisplayFor(modelItem => item.Direccion)</small></p>

                        <p class="card-text"><small class="text-muted">@Html.DisplayNameFor(model => model.Estado) :  @Html.DisplayFor(modelItem => item.Estado)</small></p>
                    </div>
                </div>
                <div style="margin-left:45%;">
                    <a asp-action="Edit" asp-route-id="@item.EmpleadoID" class="btn btn-outline-success icon-pencil"></a> ||

                    <a asp-action="Delete" asp-route-id="@item.EmpleadoID" class="btn btn-outline-danger icon-delete"></a>
                </div>
            </div>
        </div>
    }



