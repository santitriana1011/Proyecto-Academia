@model myFirstAzureWebApp.Models.Estudiante

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar a este usuario</h2>

<h3 style="color:white; font-size:45px;">¿Está seguro de eliminar este registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Acudiente) : @Html.DisplayFor(model => model.Acudiente.Nombre)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Nombre) : @Html.DisplayFor(model => model.Nombre)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Apellido) : @Html.DisplayFor(model => model.Apellido)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.Documento) : @Html.DisplayFor(model => model.Documento)
        </dt>

        <dt class="letra">
            @Html.DisplayNameFor(model => model.FechaNacimiento) : @Html.DisplayFor(model => model.FechaNacimiento)
        </dt>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EstudianteID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Atrás</a>
    </form>
</div>
