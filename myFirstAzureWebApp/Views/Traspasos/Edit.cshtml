@model myFirstAzureWebApp.Models.Traspaso

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Traspaso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TraspasoID" />
            <div class="form-group">
                <label asp-for="EstudianteID" class="control-label"></label>
                <select asp-for="EstudianteID" class="form-control" asp-items="ViewBag.EstudianteID"></select>
                <span asp-validation-for="EstudianteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EscuelaID" class="control-label"></label>
                <select asp-for="EscuelaID" class="form-control" asp-items="ViewBag.EscuelaID"></select>
                <span asp-validation-for="EscuelaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Novedades" class="control-label"></label>
                <input asp-for="Novedades" class="form-control" />
                <span asp-validation-for="Novedades" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
