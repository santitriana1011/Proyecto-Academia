@model myFirstAzureWebApp.Models.Traspaso

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar Traspaso</h2>

<h3 style="color:white; font-size:45px;">¿Está seguro de eliminar este registro?</h3>
<div>
    <hr />
    <dl class="dl-horizontal" style="margin-left:30%;">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Estudiante) : @Html.DisplayFor(model => model.Estudiante.Nombre)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Escuela) : @Html.DisplayFor(model => model.Escuela.Nombre)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.FechaInicio) : @Html.DisplayFor(model => model.FechaInicio)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.FechaFin) : @Html.DisplayFor(model => model.FechaFin)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Novedades) : @Html.DisplayFor(model => model.Novedades)
        </dt>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TraspasoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />|
        <a asp-action="Index" class="btn btn-primary">Atrás</a>
    </form>
</div>
