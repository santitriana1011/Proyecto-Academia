@model myFirstAzureWebApp.Models.HojaDeVida

@{
    ViewData["Title"] = "Editar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Editando una Hoja de Vida</h2>

<hr />
<div class="row" style="margin-left:30%;">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HojaDeVidaID" />
            <div class="form-group">
                <label asp-for="EmpleadoID" class="control-label letra">Empleado</label>
                <select asp-for="EmpleadoID" class="form-control" asp-items="ViewBag.EmpleadoID"></select>
                <span asp-validation-for="EmpleadoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialidad" class="control-label letra"></label>
                <input asp-for="Especialidad" class="form-control" />
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoExperiencia" class="control-label letra"></label>
                <input asp-for="TiempoExperiencia" class="form-control" />
                <span asp-validation-for="TiempoExperiencia" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-left:30%;">
                <input type="submit" value="Guardar" class="btn btn-warning" />
                <a asp-action="Index" class="btn btn-primary">Atrás</a>
            </div>
        </form>
    </div>
</div>

