@model myFirstAzureWebApp.Models.HojaDeVida

@{
    ViewData["Title"] = "Editar";
}

<h2>Editar</h2>

<h4>Hoja de vida</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HojaDeVidaID" />
            <div class="form-group">
                <label asp-for="EmpleadoID" class="control-label"></label>
                <select asp-for="EmpleadoID" class="form-control" asp-items="ViewBag.EmpleadoID"></select>
                <span asp-validation-for="EmpleadoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Especialidad" class="control-label"></label>
                <input asp-for="Especialidad" class="form-control" />
                <span asp-validation-for="Especialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TiempoExperiencia" class="control-label"></label>
                <input asp-for="TiempoExperiencia" class="form-control" />
                <span asp-validation-for="TiempoExperiencia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Atrás</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
