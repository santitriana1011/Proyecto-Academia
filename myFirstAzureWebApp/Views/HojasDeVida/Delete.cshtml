@model myFirstAzureWebApp.Models.HojaDeVida

@{
    ViewData["Title"] = "Eliminar";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/business-casual.css" />
<h2 style="color:white; font-size:55px;">Eliminar Hoja de Vida</h2>

<h3 style="color:white; font-size:45px;">¿Está seguro de eliminar este registro?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Empleado) : @Html.DisplayFor(model => model.Empleado.Nombre)
        </dt>
        
        <dt class="letra">
            @Html.DisplayNameFor(model => model.Especialidad) : @Html.DisplayFor(model => model.Especialidad)
        </dt>
       
        <dt class="letra">
            @Html.DisplayNameFor(model => model.TiempoExperiencia) : @Html.DisplayFor(model => model.TiempoExperiencia)
        </dt>
        
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="HojaDeVidaID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Atrás</a>
    </form>
</div>
